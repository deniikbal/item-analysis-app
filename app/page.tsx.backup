                              <td style={{ padding: '0.15rem 0.1rem', textAlign: 'center', color: '#dc2626', fontWeight: '600', fontSize: '0.6rem', border: '1px solid #e5e7eb' }}>{student.incorrect}</td>
                              <td style={{ padding: '0.15rem 0.1rem', textAlign: 'center', color: '#111827', fontWeight: '600', fontSize: '0.6rem', border: '1px solid #e5e7eb' }}>{student.total}</td>
